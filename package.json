{
  "name": "ao-core",
  "version": "1.0.15",
  "description": "AO - Core",
  "main": "src/index.js",
  "bin": {
    "ao-core": "bin/bin.js"
  },
  "scripts": {
    "start": "yarn copyfiles && DEBUG=ao:* node dist/bin.js",
    "dev": "tsc-watch --onSuccess \"yarn start\"",
    "watch": "tsc --watch",
    "build": "npm run build-ts && npm run build-bin",
    "build-bin": "webpack",
    "build-ts": "tsc && yarn copyfiles",
    "clean": "rimraf dist",
    "copyfiles": "copyfiles -u 1 \"./src/**/*.graphql\"  \"./src/modules/**/*.json\" dist",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "publishConfig": {
    "registry": "https://npm.y-designs.com"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
