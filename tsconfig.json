{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "mapRoot": "dist",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es2015", "es6", "esnext.asynciterable"],
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": [
        "./src/**/*.spec.ts",
        "dist",
        ".git",
        ".vscode",
        ".vscode/*",
        "node_modules"
    ]
}
